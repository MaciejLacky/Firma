@model IEnumerable<Firma.Data.Data.Sklep.PozycjaZamowienia>

<table class="table table-borderless">
    <thead class="thead-dark" style="background-color: #EEEEEE">
        <tr>
            <th scope="col">
                <p>Nazwa</p>
            </th>
            <th scope="col">
                <p>Cena</p>
            </th>
            <th scope="col">
                <p>Ilość</p>
            </th>
            <th scope="col">
                <p>Data zamowienia</p>
            </th>

        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Towar.Nazwa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cena)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ilosc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zamowienie.DataZamowienia)
            </td>
        </tr>

    }

</table>
